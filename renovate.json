{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "ignorePaths": [
    "apps/mysql-cluster/**",
    "apps/redis-cluster/**",
    "apps/postgresql-cluster/**"
  ],
  "packageRules": [
    {
      "packageNames": ["docker-compose"],
      "automerge": true
    },
    {
      "matchFileNames": ["apps/mysql/5.6.*/*.yml"],
      "allowedVersions": "/^5.6.*/"
    },
    {
      "matchFileNames": ["apps/mysql/5.7.*/*.yml"],
      "allowedVersions": "/^5.7.*/"
    },
    {
      "matchFileNames": ["apps/mysql/8.0.*/*.yml"],
      "allowedVersions": "/^8.0.*/"
    },
    {
      "matchFileNames": ["apps/mysql/8.4.*/*.yml"],
      "allowedVersions": "/^8.4.*/"
    },
    {
      "matchFileNames": ["apps/sing-box/1.12.*/*.yml"],
      "allowedVersions": "/^1.12.*/"
    },
    {
      "matchFileNames": ["apps/sing-box/1.13.*/*.yml"],
      "allowedVersions": "/^1.13.*/"
    }
  ],
  "prCreation": "immediate"
}